    <!-- JavaScripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            
            // 1. Navbar Scroll Effect
            const navbar = document.getElementById('mainNavbar');
            window.addEventListener('scroll', () => {
                if (window.scrollY > 50) {
                    navbar.classList.add('navbar-scrolled');
                    navbar.style.paddingTop = '8px';
                    navbar.style.paddingBottom = '8px';
                } else {
                    navbar.classList.remove('navbar-scrolled');
                    navbar.style.paddingTop = '12px';
                    navbar.style.paddingBottom = '12px';
                }
            });

            // 2. Initialize Tooltips (Bootstrap)
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // 3. Smooth Scroll for Anchor Links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;
                    
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        // Close Sidebar if open
                        const sidebarEl = document.getElementById('sidebarMenu');
                        const sidebarInstance = bootstrap.Offcanvas.getInstance(sidebarEl);
                        if(sidebarInstance) sidebarInstance.hide();

                        // Scroll
                        targetElement.scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                });
            });

            // 4. Checkout Modal Data Update
            const checkoutModal = document.getElementById('checkoutModal');
            checkoutModal.addEventListener('show.bs.modal', function () {
                document.getElementById('modalCartCount').textContent = cartTotalItems;
                // Simple mock price calculation
                let mockPrice = (cartTotalItems * 3.50).toFixed(2); 
                document.getElementById('modalTotalPrice').textContent = '$' + mockPrice;
            });

            console.log("ZEF-DONUTS Website Initialized Successfully");
        });

        // 5. Cart Logic (Frontend Simulation)
        let cartTotalItems = 0;
        const cartCountElement = document.getElementById('cartCount');
        const dropdownCartCountElement = document.getElementById('dropdownCartCount');
        
        function addToCart(itemName, price) {
            cartTotalItems++;
            cartCountElement.textContent = cartTotalItems;
            
            // Update dropdown counter if it exists
            if(dropdownCartCountElement) {
                dropdownCartCountElement.textContent = cartTotalItems;
            }
            
            // Animation for cart badge
            cartCountElement.style.transform = "scale(1.5)";
            setTimeout(() => {
                cartCountElement.style.transform = "scale(1)";
            }, 200);

            // Show Toast Notification
            showToast(`Added <strong>${itemName}</strong> to cart!`);
        }

        // 6. Checkout Logic
        function processCheckout(event) {
            event.preventDefault();
            const btn = document.getElementById('btnConfirmOrder');
            const originalText = btn.innerText;
            
            // Simulate loading
            btn.disabled = true;
            btn.innerText = "Processing...";
            
            setTimeout(() => {
                // Close modal
                const modalEl = document.getElementById('checkoutModal');
                const modalInstance = bootstrap.Modal.getInstance(modalEl);
                modalInstance.hide();
                
                // Reset UI
                cartTotalItems = 0;
                cartCountElement.textContent = '0';
                if(dropdownCartCountElement) dropdownCartCountElement.textContent = '0';
                
                // Reset Button
                btn.disabled = false;
                btn.innerText = originalText;
                
                // Show Success Toast
                showToast("Order placed successfully! Thank you.");
                document.getElementById('checkoutForm').reset();
            }, 2000);
        }

        // 7. Toast Notification Logic
        function showToast(message) {
            const toastEl = document.getElementById('cartToast');
            const toastBody = document.getElementById('toastMessage');
            
            toastBody.innerHTML = message;
            const toast = new bootstrap.Toast(toastEl, { delay: 3000 });
            toast.show();
        }

        // 8. Scroll to specific product section
        function scrollToProducts(category) {
            const targetSection = document.getElementById('products-list');
            targetSection.scrollIntoView({ behavior: 'smooth' });
            
            showToast(`Showing ${category} products (Demo)`);
        }
    </script>
</body>
</html>
