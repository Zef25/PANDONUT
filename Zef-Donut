    <!-- Toast Notification Container -->
    <div class="toast-container p-3">
        <div id="cartToast" class="toast custom-toast align-items-center" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body d-flex align-items-center">
                    <i class="ri-check-line text-success fs-4 me-2"></i>
                    <div id="toastMessage">Item added to cart!</div>
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
